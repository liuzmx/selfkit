" vim配置文件（~/.vimrc）

" 编码
set encoding=utf8

" 语法高亮
syntax on

" 显示行号
set number

" 显示模式（命令/插入）
set showmode

" 命令模式下显示命令
set showcmd

" 支持使用鼠标
set mouse=a

" 启用256色
set t_Co=256

" 开启文件类型检查
filetype indent on

" 自动缩进
set autoindent

" 光标所在行高亮
set cursorline

" 是否显示状态栏
set laststatus=2

" 高亮匹配括号
set showmatch

" 高亮搜索结果
set hlsearch

" 实时搜索
set incsearch
